<% include ./partials/header.ejs %>
<div class = "w-full h-screen  bg-cover bg-[url(https://images.unsplash.com/photo-1507181179506-598491b53db4?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] flex items-center justify-center">
 <div class="w-[60vh] h-[65vh]  px-10 bg-white rounded-[30px]"> 
